# --- Colors / Theme ---
theme = GitHub Dark Dimmed
bold-color = bright

# --- Fonts ---
font-family = "JetBrainsMono Nerd Font Mono"
font-size = 15
font-feature = -calt

# --- Terminal behavior ---
copy-on-select = true
selection-clear-on-typing = true

# It's hard to hit cmd+opt so switching to cmd+shift
# also using vim style keys
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+l=goto_split:right
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+j=goto_split:bottom

# Resizing panes with vim style keys
keybind = cmd+ctrl+h=resize_split:left,10
keybind = cmd+ctrl+j=resize_split:down,10
keybind = cmd+ctrl+k=resize_split:up,10
keybind = cmd+ctrl+l=resize_split:right,10

# Navigate tabs with Opt+h/l
keybind = alt+h=previous_tab
keybind = alt+l=next_tab

# Custom name for the current surface (tab or split)
keybind = cmd+shift+r=prompt_surface_title

# Inherit cwd when opening new windows/tabs
window-inherit-working-directory = true

# Autodetect shell for behaviours
shell-integration = detect

# --- Look and Feel ---
window-padding-x = 10
window-padding-y = 10

# Setting a custom icon for the app
macos-icon = custom

# Cleaning up the titlebar
macos-titlebar-proxy-icon = hidden

# Dimming
unfocused-split-opacity = 0.9
cursor-style-blink = true
