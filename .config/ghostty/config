# --- Colors / Theme ---
theme = GitHub Dark Dimmed
bold-color = bright

# --- Fonts ---
font-family = "JetBrainsMono Nerd Font Mono"
font-size = 15
font-feature = -calt

# --- Terminal behavior ---
copy-on-select = true
selection-clear-on-typing = true

# It's hard to hit cmd+opt so switching to cmd+shift
# also using vim style keys
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+l=goto_split:right
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+j=goto_split:bottom

# Custom name for the current surface (tab or split)
keybind = cmd+shift+r=prompt_surface_title

# Inherit cwd when opening new windows/tabs
window-inherit-working-directory = true

# Autodetect shell for behaviours
shell-integration = detect

# --- Look and Feel ---
window-padding-x = 10
window-padding-y = 10

# Setting a custom icon for the app
macos-icon = custom

macos-titlebar-proxy-icon = hidden
macos-titlebar-style = tabs

# When resizing the thing rings a million times
bell-features = no-attention,no-title

# Don't need to highlight the focused split, I can see it
unfocused-split-opacity = 1.0

